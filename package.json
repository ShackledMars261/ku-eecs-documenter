{
  "name": "ku-eecs-lab-annotator",
  "displayName": "KU EECS Lab Annotator",
  "description": "Generate the KU EECS Lab info annotation at the top of the exercises",
  "author": "Jack Martin",
  "publisher": "ShackledMars261",
  "icon": "./resources/ku_jayhawk_resized.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ku-eecs-lab-annotator.generateAndWriteAnnotation",
        "title": "Generate annotation for current file",
        "category": "EECS Annotator"
      },
      {
        "command": "ku-eecs-lab-annotator.setup",
        "title": "Setup the extension",
        "category": "EECS Annotator"
      }
    ],
    "configuration": [
      {
        "title": "KU EECS Lab Annotator",
        "properties": {
          "ku-eecs-lab-annotator.author": {
            "type": "string",
            "default": "",
            "scope": "application",
            "description": "What to fill the \"Author\" field with. (Probably your first and last name.)"
          },
          "ku-eecs-lab-annotator.kuid": {
            "type": "integer",
            "default": 1234567,
            "scope": "application",
            "description": "What to fill the \"KUID\" field with. (Probably your KUID number.)"
          },
          "ku-eecs-lab-annotator.dateFormat": {
            "type": "string",
            "default": "mm/dd/yyyy",
            "scope": "application",
            "enum": [
              "mm/dd/yyyy",
              "dd/mm/yyyy"
            ],
            "description": "Which date format to use."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky install",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "cspell": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,json}": [
      "prettier --write",
      "eslint"
    ],
    "*.{yaml,yml}": "prettier --write",
    "*.scss": "prettier --write",
    "*.md": "cspell --no-progress --color"
  },
  "cspell": {
    "ignorePaths": [
      "vsc-extension-quickstart.md"
    ],
    "dictionaries": [
      "KU EECS Lab Annotator"
    ],
    "dictionaryDefinitions": [
      {
        "name": "KU EECS Lab Annotator",
        "path": "./.cspell/project-dictionary.txt",
        "addWords": true
      }
    ]
  }
}
